<!DOCTYPE html>
<html>
<head>
  <title>Update Cat</title>
  <link rel="stylesheet" href="../css/style.css">
</head>
<body>
  <div class="container">
    <h1>Update Cat</h1>
    
    <form method="post" action="/update/<%= cat.id %>">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="<%= cat.name %>" required>

      <label for="breed">Breed:</label>
      <input type="text" id="breed" name="breed" value="<%= cat.breed %>" required>

      <label for="age">Age:</label>
      <input type="text" id="age" name="age" value="<%= cat.age %>" required>

      <label for="age">Color:</label>
      <input type="text" id="color" name="color" value="<%= cat.color %>" required>

      <label for="age">Price:</label>
      <input type="text" id="price" name="price" value="<%= cat.price %>" required>

      <button type="submit">Update</button>
    </form>

    <div class="link-group">
      <a href="/cat/<%= cat.id %>" class="view">View</a>
      <a href="/delete/<%= cat.id %>" class="delete">Delete</a>
      <a href="/" class="back">Back to List</a>
    </div>
  </div>
</body>
</html>
