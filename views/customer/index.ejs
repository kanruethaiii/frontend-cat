<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cat Shop</title>
    <link rel="stylesheet"  href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <ul>
            <li><a href="/cat">Cat</a></li>
            <li><a href="/customer">Customer</a></li>
            <li><a href="/order">Order</a></li>
            <li><a href="/breed">Breed</a></li>
        </ul>
    </nav>
    <main>
        <h1>Customer List</h1>
        <center>
        <table class="list" style="width: 80%;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <!-- <th>Name</th> -->
                    <!-- <th>Email</th> -->
                    <th>Phone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach(item => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.username %></td>
                        <!-- <td><%= item.firstName + " " + item.lastName %></td> -->
                        <!-- <td><%= item.email %></td> -->
                        <td><%= item.phoneNumber %></td>
                        <td>
                            <a href="/customer/<%= item.id %>">View</a>
                            <a href="/customer/<%= item.id %>/edit">Edit</a>
                            <a href="/customer/<%= item.id %>/delete" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/customer/create" class="CreateNewCat">Create New</a>
    </center>
    </main>
</body>
</html>
