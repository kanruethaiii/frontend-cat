<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cat Shop</title>
    <link rel="stylesheet"  href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <ul>
            <li><a href="/cat">Cat</a></li>
            <li><a href="/customer">Customer</a></li>
            <li><a href="/order">Order</a></li>
            <li><a href="/breed">Breed</a></li>
        </ul>
    </nav>
    <main>
        <h1>Pet and Customer</h1>
        <center>
        <table class="list" style="width: 80%;">
            <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Cat</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <% const orderId = "O" + String(order.id).padStart(3, '0')  %>
                    <tr>
                        <td><%= orderId %></td>
                        <td><%= order.cat_name %></td>
                        <td><%= order.customer_name %></td>
                        <td><%= new Date(order.order_date).toLocaleDateString('en-GB') %></td>
                        <td><%= order.total_amount %></td>
                        <td>
                            <a href="/order/<%= order.id %>">View</a>
                            <a href="/order/<%= order.id %>/edit">Edit</a>
                            <a href="/order/<%= order.id %>/delete" onclick="return confirm('Are you sure you want to delete this order?')">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/order/create" class="CreateNewCat">Create New</a>
    </center>
    </main>
</body>
</html>
