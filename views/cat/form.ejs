<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cat Form</title>
    <link rel="stylesheet" href="/css/edit.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
    <center>
        <h1><%= cat.id ? "Edit Cat" : "Add Cat" %></h1>
    <form action="<%= cat.id ? `/cat/${cat.id}/edit` : '/cat/create' %>" method="POST">
        <div class="form-group">
            <label for="name"><strong>Name:</strong></label>
            <input type="text" id="name" name="name" required size="40" value="<%= cat.name %>">
        </div>

        <div class="form-group">
            <label for="breed"><strong>Breed Name:</strong></label>
            <select id="breed" name="breed">
                <!-- breeds -->
                <% breeds.forEach(breed => { %>
                    <option value="<%= breed.name %>" <%= cat.breed === breed.name ? "selected" : "" %>><%= breed.name %></option>
                <% }) %>
            </select>
        </div>

        <div class="form-group">
            <label for="age"><strong>Age:</strong></label>
            <input type="number" id="age" name="age" min="0" required value="<%= cat.age || '' %>">
        </div>

        <div class="form-group">
            <label for="color"><strong>Color:</strong></label>
            <input type="text" id="color" name="color" required size="40" value="<%= cat.color || '' %>">
        </div>

        <div class="form-group">
            <label for="price"><strong>Price:</strong></label>
            <input type="number" id="price" name="price" min="0" step="0.01" required value="<%= cat.price || '' %>">
        </div>

        <div class="form-group">
            <label for="availability"><strong>Availability:</strong></label>
            <select id="availability" name="availability">
                <option value="In stock" <%= cat.availability === "In stock" ? "selected" : "" %>>In stock</option>
                <option value="Sold out" <%= cat.availability === "Sold out" ? "selected" : "" %>>Sold out</option>
            </select>
        </div>

        <button type="submit" class="button">Save</button>
        <br>
        <br>
        <a href="/cat" button class="button">Back to List</a>
    </form>
    </center>
</body>
</html>
