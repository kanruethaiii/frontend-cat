<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cat Shop</title>
    <link rel="stylesheet"  href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <ul>
            <li><a href="/cat">Cat</a></li>
            <li><a href="/customer">Customer</a></li>
            <li><a href="/order">Order</a></li>
            <li><a href="/breed">Breed</a></li>
        </ul>
    </nav>
    <main>
        <h1>Cat List</h1>
        <center>
        <table class="list" style="width: 50%;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Breed</th>
                    <th>Availability</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% cats.forEach(cat => { %>
                    <tr>
                        <td><%= cat.id %></td>
                        <td><%= cat.name %></td>
                        <td><%= cat.breed %></td>
                        <td><%= cat.availability %></td>
                        <td>
                            <a href="/cat/<%= cat.id %>">View</a>
                            <a href="/cat/<%= cat.id %>/edit">Edit</a>
                            <a href="/cat/<%= cat.id %>/delete" onclick="return confirm('Are you sure you want to delete this cat?')">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/cat/create" class="CreateNewCat" ">Create New Cat</a>
    </center>
    </main>
</body>
</html>
